<%- include('partials/header'); -%>
<style>
    .login-div{
        padding-top: 100px;
        width: 30%;
        height: 400px;
        border-color: black;
        border-width: 2px;
        border-style: solid;
    }
    .login-main-div{
        display: flex;
        justify-content: center;
        background-image: linear-gradient(to right top, #5c5f64, #497382, #228986, #3e9b6b, #84a43d);
    }
    .login-main-div input,button{
        width: 40%;
    }
</style>
</head>
<body>
    <div class="login-main-div">
        <div class="login-div ">
            <div class="form-title text-center">
              <h4>Login</h4>
            </div>
            <div class="d-flex flex-column text-center">
              <form action="/Login" method="post">
                <div class="form-group">
                  <input type="text" class="form-control" id="email1"placeholder="Username" name="username" required>
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" id="password1" placeholder="Password" name="password" required>
                </div>
                <button type="submit" class="btn btn-toolbar d-flex btn-round justify-content-center mt-5 " style="border-width: 2px; border-color: black;">Login</button>
              </form>
          </div>
        </div>
    </div>
    
<%- include('partials/footer'); -%>