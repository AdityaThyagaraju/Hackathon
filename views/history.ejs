</head>
<body>
    <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">SL.NO</th>
            <th scope="col">Product</th>
            <th scope="col">Seller/Buyer</th>
            <th scope="col">Amount</th>
          </tr>
        </thead>
        <tbody>
            <%const transaction=user.transactions%>
            <%for(var i=0;i<transaction.length;i++){%>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%=transaction[i].product </td>
            <% if(transaction[i].bought===true){ %>
            <td><%=transaction[i].buyerUsn%></td>
            <%}else{%>
                <td><%=transaction[i].sellerUsn%></td>
            <%}%>
            <td><%= transaction[i].amount%></td>
            
          </tr>
          <%}%>
        </tbody>
      </table>
	
